<h2>Edit Character</h2>

<%= form_for @character do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>

  <%= f.label :last_name %>
  <%= f.text_field :last_name %>

  <%= f.label :img_url %>
  <%= f.text_field :img_url %>

  <%= f.label :house %>
  <%= f.text_field :house %>

  <%= f.submit %>
<% end %>

<%= form_for @character, method: :delete do |f| %>
  <%= f.submit "ELMINATE", class: "delete" %>
<% end %>
